.under {
  background-color: #F4F5F8;
  width: 100%;
}

.account_block {
  display: flex;
  flex-direction: row;
  margin-top: 3rpx;
  height: 200rpx;
  background-color: white;
  
}
.account_block image{
  width: 140rpx; 
  height: 140rpx; 
  margin-left: 40rpx;
  margin-top: 30rpx;
  border-radius: 70rpx; 
  background-color: #eeeeee;
}

.account_info {
  display: flex;
  flex-direction: column;
  margin-top: 45rpx;
  margin-left: 30rpx;
}

.account_name {
  margin-top: 8rpx;
  font-size: 90%;
}

.account_intro {
  margin-top: 8rpx;
  font-size: 80%;
  color: gray;
}

.balance_block {
  display: flex;
  margin-top: 30rpx;
  height: 100rpx;
  background-color: white;
}

.balance_block image {
  margin-top: 30rpx;
  margin-left: 30rpx; 
  width: 45rpx;
  height: 45rpx;
}

.balance_text {
  margin-top: 32rpx;
  margin-left: 30rpx;
  font-size: 85%;
  color: gray;
  font-weight: normal;
}

.balance_number {
  margin-top: 32rpx;
  margin-left: 420rpx;
  font-size: 85%;
  font-weight: normal;
  color: gray;
}

.check_block {
  display: flex;
  margin-top: 3rpx;
  height: 100rpx;
  background-color: white;
}

.check_block image {
  margin-top: 28rpx;
  margin-left: 28rpx; 
  width: 50rpx;
  height: 50rpx;
}

.check_text {
  margin-top: 32rpx;
  margin-left: 26rpx;
  font-size: 85%;
  color: gray;
  font-weight: normal;
}

.total_generation_block {
  display: flex;
  background-color: white;
  margin-top: 3rpx;
  height: 100rpx;
}

.total_generation_block image {
  margin-top: 28rpx;
  margin-left: 28rpx; 
  width: 48rpx;
  height: 48rpx;
}

.total_generation_block_text {
  margin-top: 32rpx;
  margin-left: 26rpx;
  font-size: 85%;
  color: gray;
  font-weight: normal;
}

.totla_consume_block {
  display: flex;
  background-color: white;
  margin-top: 3rpx;
  height: 100rpx;
}

.total_consume_block_text {
  margin-top: 32rpx;
  margin-left: 26rpx;
  font-size: 85%;
  color: gray;
  font-weight: normal;
}

.totla_consume_block image {
  margin-top: 28rpx;
  margin-left: 28rpx; 
  width: 50rpx;
  height: 50rpx;
}

.block {
  background-color: white;
  margin-top: 3rpx;
  border-bottom-width: 5rpx;
  border-bottom-color: green;
  border-top-width: 5rpx;
  border-top-color: yellow;
  height: 100rpx;
  width: 100%;
}